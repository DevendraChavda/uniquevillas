---
import "./../app.css";
import Cart from "./Cart.astro";
const { number1, number2 } = Astro.props;
---

<div class="relative mt-10 w-full min-h-[30rem]">
  <!-- Background Image -->
  <img
    src="image/home.jpg"
    alt="Home"
    class="w-full h-full object-cover absolute inset-0 -z-10"
  />

  <!-- Full Overlay Background -->
  <div class="absolute inset-0 bg-black bg-opacity-50"></div>

  <!-- Content Container -->
  <div
    class="absolute bottom-0 left-0 right-0 p-4 md:p-8 flex flex-col md:flex-row items-center md:items-start justify-between text-white"
  >
    <!-- Left Section -->
    <div
      class="flex flex-col items-center md:items-start text-center md:text-left mb-6 md:mb-0"
    >
      <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-2">
        We Are Here <br class="hidden md:block" /> For You
      </h1>
      <div class="text-xl md:text-2xl font-bold">TESTIMONIAL</div>
    </div>

    <!-- Right Section -->
    <div class="flex flex-col md:flex-row gap-4 md:gap-8">
      <!-- Stats -->
      <div class="flex flex-col gap-4 md:gap-8">
        <div class="flex flex-col items-center md:items-start">
          <span class="text-2xl md:text-3xl font-bold">{number1}+</span>
          <span class="text-sm md:text-lg">Property Available</span>
        </div>
        <div class="flex flex-col items-center md:items-start">
          <span class="text-2xl md:text-3xl font-bold">{number2}+</span>
          <span class="text-sm md:text-lg">Total Partners</span>
        </div>
      </div>

      <!-- Tags -->
      <div
        class="grid grid-cols-2 md:grid-cols-3 gap-2 p-2 border border-white rounded-3xl bg-slate-400 bg-opacity-60"
      >
        <div class="text-white p-2 rounded-full bg-opacity-80">Furniture</div>
        <div class="text-white p-2 rounded-full bg-opacity-80">Home</div>
        <div class="text-white p-2 rounded-full bg-opacity-80">Rent</div>
        <div class="text-white p-2 rounded-full bg-opacity-80">100%</div>
        <div class="text-white p-2 rounded-full bg-opacity-80">Brand</div>
        <div class="text-white p-2 rounded-full bg-opacity-80">Trusted</div>
      </div>
    </div>
  </div>
</div>
