<div class="flex flex-col items-center mt-8 px-4 bg-slate-50 py-4">
  <!-- Container for Content and Image -->
  <div
    class="w-full max-w-6xl flex flex-col md:flex-row items-center justify-between gap-8"
  >
    <!-- Content Section -->
    <div
      class="flex flex-col items-center md:items-start text-center md:text-left"
    >
      <h2
        class="text-2xl md:text-4xl lg:text-5xl font-semibold leading-tight mb-4"
      >
        Find the Most <br class="block" /> Comfortable Residence <br />
        Near You Now
      </h2>
      <div class="flex flex-col sm:flex-row gap-4">
        <button
          class="capitalize rounded-xl bg-[#cef37f] px-4 py-2 font-medium hover:bg-[#b8e15d] transition-colors"
        >
          Nearest Residence
        </button>
        <button
          class="capitalize rounded-xl border border-black px-4 py-2 font-medium hover:bg-gray-100 transition-colors"
        >
          View Property
        </button>
      </div>
    </div>

    <!-- Image Section -->
    <div class="w-full md:w-[400px] flex justify-center">
      <img
        src="image/home.jpg"
        alt="Map image"
        class="w-full h-auto rounded-lg shadow-lg"
      />
    </div>
  </div>
</div>
