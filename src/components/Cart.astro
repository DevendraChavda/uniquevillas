---
import "./../app.css";
const { price, rating, name, para } = Astro.props;
---

<!-- cart section -->
<div
  class="flex flex-col gap-1 justify-center ml-2 sm:ml-10 lg:ml-10 font-sans"
>
  <div class="relative">
    <img
      src="image/home.jpg"
      alt="#img"
      width="200"
      height="200"
      class="cart"
    />

    <span
      class="text-xl absolute top-1 left-4 bg-slate-100 p-1 rounded-lg px-2 mt-1 ml-1"
      >${price}/Month</span
    >
  </div>

  <div class="flex justify-between max-w-[200px]">
    <span class="font-semibold text-xl">{name}</span>
    <span class="flex gap-1 font-semibold"
      ><img src="image/rating.svg" height="20" width="20" />{rating}</span
    >
  </div>

  <div class="max-w-[200px]">
    <p>{para}...</p>
  </div>
</div>
