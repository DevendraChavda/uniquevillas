---
import "./../app.css";
import Cart from "./Cart.astro";
import Property from "./Property.astro";
import Location from "./Location.astro";
import Card from "./Card.astro";
import Footer from "./Footer.astro";
import Tabs from "./Tabs.astro";
const { number1, number2 } = Astro.props;
---

<section class="wrapper flex items-center justify-center w-full">
  <div class="ml-3 mr-3">
    <!-- navbar -->
    <nav class="flex justify-between">
      <h class="text-2xl font-bold p-1 hover:cursor-pointer"
        ><a href="/">Garment</a></h
      >

      <ul class="flex gap-2 p-1 hover:cursor-pointer">
        <li><a href="#">Home</a></li>
        <li><a href="#">Property</a></li>
        <li><a href="#">Product</a></li>
        <li><a href="#">Contact</a></li>
        <li><a href="#">About Us</a></li>
      </ul>

      <ul class="flex gap-2 p-1 hover:cursor-pointer">
        <li><a href="#">Login</a></li>
        <li><a href="#">Register</a></li>
        <li><a href="#">Cart</a></li>
      </ul>
    </nav>

    <!-- hero content -->

    <div class="mt-10 p-4">
      <!-- section-1 -->
      <div class="flex flex-col md:flex-row items-center md:items-start gap-8">
        <!-- Text and Button Section -->
        <div class="flex-1 text-center md:text-left">
          <h1 class="text-3xl md:text-7xl">
            <p>
              <span class="text-gray-400">Find the</span>
              <span>Most</span>
            </p>
            <p>Appropriate Residence</p>
            <p>
              For You <span class="text-gray-400">To Live In</span>
              <span class="text-4xl md:text-6xl">^</span>
            </p>
          </h1>
          <button
            class="mt-4 px-6 py-2 border-[1px] border-black rounded-full hover:curser-pointer hover:bg-black hover:text-white transition-colors"
            >See Properties</button
          >
        </div>

        <!-- Testimonial Section -->
        <div
          class="flex-shrink-0 flex flex-col items-center md:items-start gap-4 p-4 bg-gray-100 rounded-lg shadow-lg"
        >
          <div class="flex items-center gap-2">
            <img
              src="image/profile.png"
              alt="Testimonial Profile"
              height="50"
              width="50"
              class="rounded-full bg-slate-400"
            />
            <span class="font-semibold">TOP TESTIMONIAL</span>
          </div>
          <p class="font-medium text-center md:text-left max-w-[60%]">
            Incredible experience with a garment! Their expertise and dedication
            made...
          </p>
        </div>
      </div>

      <!-- section-2 -->
      <div
        class="mt-8 flex flex-col sm:flex-row justify-center items-center gap-6"
      >
        <!-- Feature Cards -->
        <div class="feature-section">
          <div class="flex items-center gap-4">
            <div class="cart-image">
              <img
                src="image/location.png"
                alt="Location Icon"
                height="50"
                width="50"
                class="rounded-full"
              />
            </div>
            <div>
              <p class="font-semibold">Best</p>
              <p>Location</p>
            </div>
          </div>

          <div class="flex items-center gap-4">
            <div class="cart-image">
              <img
                src="image/building.png"
                alt="Building Icon"
                height="50"
                width="50"
                class="rounded-full"
              />
            </div>
            <div>
              <p class="font-semibold">Best</p>
              <p>Building</p>
            </div>
          </div>

          <div class="flex items-center gap-4">
            <div class="cart-image">
              <img
                src="image/wallet.png"
                alt="Wallet Icon"
                height="50"
                width="50"
                class="rounded-full"
              />
            </div>
            <div>
              <p class="font-semibold">Best</p>
              <p>Price</p>
            </div>
          </div>

          <div class="flex justify-center items-center lg:ml-6">
            <button class="feature-button"> Search Property </button>
          </div>
        </div>
      </div>
    </div>

    <Property number1={150} number2={87} />

    <Location />

    <Card />

    <Tabs />

    <Footer />
  </div>
</section>
