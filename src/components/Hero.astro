---
import "./../app.css";
import Cart from "./Cart.astro";
import Property from "./Property.astro";
import Location from "./Location.astro";
import Card from "./Card.astro";
import Footer from "./Footer.astro";
import Tabs from "./Tabs.astro";
import Swipper from "./Swipper.astro";
const { number1, number2 } = Astro.props;
---

<section class="wrapper flex items-center justify-center w-full">
  <div class="ml-3 mr-3">
    <!-- navbar -->
    <nav class="flex justify-between">
      <h class="text-2xl font-bold p-1 hover:cursor-pointer"
        ><a href="/">Garment</a></h
      >

      <ul class="flex gap-2 p-1 hover:cursor-pointer">
        <li><a href="#">Home</a></li>
        <li><a href="#">Property</a></li>
        <li><a href="#">Product</a></li>
        <li><a href="#">Contact</a></li>
        <li><a href="#">About Us</a></li>
      </ul>

      <ul class="flex gap-2 p-1 hover:cursor-pointer">
        <li><a href="#">Login</a></li>
        <li><a href="#">Register</a></li>
        <li><a href="#">Cart</a></li>
      </ul>
    </nav>

    <!-- hero content -->

    <div class="mt-10 p-4">
      <!-- section-1 -->
      <div class="flex flex-col md:flex-row items-center md:items-start gap-8">
        <!-- Text and Button Section -->
        <div class="flex-1 text-center md:text-left md:ml-5 md:pl-5">
          <h1 class="text-3xl md:text-7xl">
            <p>
              <span class="text-gray-400">Find the</span>
              <span>Most</span>
            </p>
            <p>Appropriate Residence</p>
            <p>
              For You <span class="text-gray-400">To Live In</span>
              <span class="text-4xl md:text-6xl">^</span>
            </p>
          </h1>
          <button
            class="mt-4 px-6 py-2 border-[1px] border-black rounded-full hover:curser-pointer hover:bg-black hover:text-white transition-colors"
            >See Properties</button
          >
        </div>

        <!-- Testimonial Section -->
        <div
          class="flex-shrink-1 flex flex-col items-center md:items-start gap-4 p-4 bg-gray-100 rounded-lg shadow-lg lg:w-[40vw] md:w-[60vw] w-[350px]"
        >
          <div class="flex items-center gap-2">
            <img
              src="image/profile.png"
              alt="Testimonial Profile"
              height="50"
              width="50"
              class="rounded-full bg-slate-400"
            />
            <span class="font-semibold">TOP TESTIMONIAL</span>
          </div>
          <p
            class="font-medium text-center md:text-left md:max-w-[60%]: lg:max-w-[60%] sm:max-w-[70%]"
          >
            Incredible experience with a garment! Their expertise and dedication
            made...
          </p>
        </div>
      </div>

      <!-- section-2 -->
      <div class="mt-8 flex flex-col sm:flex-row justify-center items-center">
        <!-- Feature Cards -->
        <div class="feature-section">
          <div class="flex items-center justify-between min-w-[10rem]">
            <div class="flex items-center gap-2">
              <div class="cart-image">
                <img
                  src="image/location.png"
                  alt="Location Icon"
                  height="20"
                  width="20"
                  class="rounded-full"
                />
              </div>
              <div>
                <p class="font-semibold">Best</p>
                <p class="text-gray-400">Search Location</p>
              </div>
            </div>

            <div class="w-[1px] h-[40px] bg-slate-400 hidden lg:block ml-4">
            </div>
          </div>

          <div class="flex items-center justify-between min-w-[10rem]">
            <div class="flex items-center gap-2">
              <div class="cart-image">
                <img
                  src="image/build.png"
                  alt="Location Icon"
                  height="20"
                  width="20"
                  class="rounded-full"
                />
              </div>
              <div>
                <p class="font-semibold">Select Type</p>
                <p class="text-gray-400">Search Location</p>
              </div>
            </div>

            <div class="w-[1px] h-[40px] bg-slate-400 hidden lg:block ml-4">
            </div>
          </div>

          <div class="flex items-center justify-between min-w-[10rem]">
            <div class="flex items-center gap-2">
              <div class="cart-image">
                <img
                  src="image/wall.png"
                  alt="Location Icon"
                  height="20"
                  width="20"
                  class="rounded-full"
                />
              </div>
              <div>
                <p class="font-semibold">Budget</p>
                <p class="text-gray-400">Determine Your Budget</p>
              </div>
            </div>

            <div class="w-[1px] h-[40px] bg-slate-400 hidden lg:block ml-4">
            </div>
          </div>

          <div class="flex justify-center items-center lg:ml-6 mb-2">
            <button class="feature-button"> Search Property </button>
          </div>
        </div>
      </div>
    </div>

    <Property number1={150} number2={87} />

    <Location />

    <Card />

    <Tabs />

    <Swipper />
    <Footer />
  </div>
</section>
